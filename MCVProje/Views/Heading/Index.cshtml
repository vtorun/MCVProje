@using EntityLayer.Concrete
@model List<Heading>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Başlıklar</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>BAŞLIK ADI</th>
        <th>TARİH</th>
        <th>KATEGORİ</th>
        <th>YAZAR</th>
        <th>GÜNCELLE</th>
        <th>SİL</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.HeadingId</th>
            <td>@item.HeadingName</td>
            <td>@item.HeadingDate</td>
            <td>@item.Category.CategoryName</td>
            <td>@item.Writer.WriterName @item.Writer.WriterSurName</td>
            <td><a href="/Heading/UpdateHeading/@item.HeadingId" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Heading/DeleteHeading/@item.HeadingId" class="btn btn-danger">Sil</a></td>
            <td><button class="btn btn-primary">Başlıklar</button></td>
        </tr>
    }

</table>
<a href="/Heading/AddHeading/" class="btn btn-info">YENİ BAŞLIK</a>
<button class="btn btn-warning">KATEGORİ LİSTESİ</button>
<button class="btn btn-danger">KATEGORİ AÇIKLAMALARI</button>
<br />
<br />
