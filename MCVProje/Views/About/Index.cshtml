@using EntityLayer.Concrete
@model List<About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hakkım Veri Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Hakkımda Başlığı</th>
        <th>Durum</th>
        <th>Aktif Mi?</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AboutId</td>
            <td>@item.AboutDetails1</td>
            <td>
                @if (item.AboutStatus == true)
                {
                    <p class="badge badge-success">Aktif</p>
                }
                else
                {
                    <p class="badge badge-danger">Pasif</p>
                }
            </td>
            <td>
                @if (item.AboutStatus == true)
                {
                    <a href="/About/DeleteAbout/@item.AboutId" class="btn btn-success">Pasif Yap</a>
                }
                else
                {
                    <a href="/About/DeleteAbout/@item.AboutId" class="btn btn-warning">Aktif Yap</a>
                }
            </td>
        </tr>
    }
</table>

<button class="btn btn-primary" data-toggle="modal" data-target="#Modal1">
    Yeni Hakkımızda Yazı Girişi
</button>

@Html.Action("AboutPartial", "About")